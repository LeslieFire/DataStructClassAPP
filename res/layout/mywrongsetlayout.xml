<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/wrongbackground">
	

    <LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		
		<ImageButton android:id="@+id/waset_return_btn" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_marginTop="20px"
			android:layout_marginLeft="18px" 
			android:src="@drawable/return3"
			android:background="#00ffffff"></ImageButton>		

	</LinearLayout>	
        
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" 
		android:scrollbars="vertical"
		android:layout_marginTop="24px">
		<TextView 
			android:id="@+id/wacount_text"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:textSize ="8pt" android:textColor = "#FF0000"></TextView>
		<ListView
			android:id="@+id/walist"
			android:layout_width="fill_parent" android:layout_height="wrap_content"></ListView>
	</LinearLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		 android:gravity="bottom">
		
		<ImageButton android:id="@+id/waset_clearall_btn" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_gravity="center"
			android:layout_marginBottom="15px"
			android:layout_marginTop="15px"
			android:src="@drawable/clear1"
			android:background="#00ffffff"></ImageButton>	

			
	</LinearLayout>
</LinearLayout>
